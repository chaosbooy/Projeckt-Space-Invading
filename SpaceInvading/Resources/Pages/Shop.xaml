<Page x:Class="SpaceInvading.Resources.Pages.Shop"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SpaceInvading.Resources.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Shop" Background="SaddleBrown">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.RowSpan="3" Text="Oferty" TextAlignment="Center" Height="100" Background="DimGray" VerticalAlignment="Top" FontSize="30" Foreground="#DDDDDD"/>
        <ScrollViewer Grid.Row="0" Grid.RowSpan="3">
            <StackPanel>
                <Grid x:Name="oferta1" Background="MediumPurple" Height="55">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.2*" />
                        <ColumnDefinition Width="0.6*" />
                        <ColumnDefinition Width="0.2*" />
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Source="../Images/misc/Item_frame.png" Width="48" Stretch="Fill" HorizontalAlignment="Left" Margin="5" Height="48"/>
                    <Image  Grid.Column="0" Source="../Images/misc/Upgrade_armor.png" Width="43" Stretch="Fill" HorizontalAlignment="Left" Margin="7" Height="43"/>
                    <TextBox Grid.Column="1" Background="Transparent" HorizontalAlignment="Center" Text="Ulepszenie zbroi - +1HP" VerticalContentAlignment="Center" FontSize="20" TextWrapping="Wrap"  BorderThickness="0" ></TextBox>
                    <TextBox Grid.Column="2" Background="Transparent" HorizontalAlignment="Right" Text="Cena: 999" VerticalContentAlignment="Center" FontSize="20" TextWrapping="Wrap" BorderThickness="0" ></TextBox>
                </Grid>
            </StackPanel>
        </ScrollViewer>
        <Button Content="Powrót do wioski" FontSize="30" Margin="10,20" Grid.Column="2" Grid.Row="2" Foreground="#3453b3" Click="BackToVillage" ></Button>
    </Grid>
</Page>
