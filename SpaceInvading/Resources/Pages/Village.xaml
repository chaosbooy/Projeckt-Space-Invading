<Page x:Class="SpaceInvading.Resources.Pages.Village"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SpaceInvading.Resources.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="LightSlateGray"
      Title="Village">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="../Images/Village/village.png"></ImageBrush>
        </Grid.Background>
        <Image Grid.Column="0" Grid.Row="0" Source="../Images/Village/Shop_blacksmith.png"  MouseLeftButtonDown="Image_MouseLeftButtonDown" MouseEnter="MouseEnter" MouseLeave="MouseLeave"></Image>
        <Image Grid.Column="1" Grid.Row="0" Source="../Images/Village/Gate.png"  MouseLeftButtonDown="StartGame" MouseEnter="MouseEnter" MouseLeave="MouseLeave"></Image>
        <Image Grid.Column="2" Grid.Row="1" Source="../Images/Village/Shop_merchant.png"  MouseLeftButtonDown="GoShop" MouseEnter="MouseEnter" MouseLeave="MouseLeave"></Image>
        <Image Grid.Column="0" Grid.Row="2" Source="../Images/Village/Shop_witch.png"  MouseLeftButtonDown="Image_MouseLeftButtonDown" MouseEnter="MouseEnter" MouseLeave="MouseLeave"></Image>
        
    </Grid>
</Page>
