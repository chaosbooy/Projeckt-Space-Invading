<Page x:Class="SpaceInvading.Pages.Lobby"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SpaceInvading.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Lobby" Background="#35974E">
   
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel VerticalAlignment="Center">
            <Image Name="Image_Title" Margin="0"/>
            <Button Content="Start" FontSize="50" Margin="50,0,50,0" Background="#C38811" Foreground="#664400" BorderBrush="#664400" BorderThickness="5" Click="StartGame" />
            <Button Content="Exit" FontSize="39" Margin="80,50,80,50" Background="#C38811" Foreground="#664400" BorderBrush="#664400" BorderThickness="5" Click="LeaveGame" />
        </StackPanel>

        <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Hidden" Background="#2A793E" >
            
            <TextBlock Text="Scores" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" Foreground="LightSteelBlue"/>
        </ScrollViewer>
    </Grid>
</Page>
